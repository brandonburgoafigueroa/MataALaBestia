      <% if $game.IsNearTheMonster();%>
      <br/>  Siento un olor
      <%end%>
      <% if $game.IsNearTheWeaterWell();%>
      <br/>  Siento una brisa
      <%end%>
      <% if $game.IsTheSamePosMonsterAndPerson();%>
     <br/> El monstruo te atrapo
    <%end%>
    <% if $game.IsInTheSamePosWaterWellAndPersonMove()%>
    <br/> Te caiste al pozo
   <%end%>
   <% if @SleepBat%>
   <br/> El murcielago esta dormido
    <%end%>
      <% if $game.IsBatIsNearOfPerson()%>
       <br/> Oigo un sonido
      <%end%>
