          <form method='post' action='/AlNorte'>
            <input type='submit' disabled value='Ir al norte'</td>
          </form>
          <form method='post' action='/LanzarAlNorte'>
           <input type='submit' disabled value='Lanzar Flecha Al Norte'</td>
         </form>
         <form method='post' action='/LanzarSprayAlNorte'>
         <input type='submit' disabled value='Lanzar Spray Al Norte'</td>
       </form>
        <% end %>
        </td>
        <td></td>
      </tr>
      <tr>
        <td align='center'>
        <% if $game.GetDoors()[3] && $game.IsTheSamePosMonsterAndPerson()==false && $game.IsInTheSamePosWaterWellAndPersonMove()==false && !@KillMonster; %>
         <form method='post' action='/AlOeste'>
           <input type='submit' value='Ir al oeste'</td>
          </form>
          <form method='post' action='/LanzarAlOeste'>
           <input type='submit' value='Lanzar Flecha Al Oeste'</td>
          </form>
          <form method='post' action='/LanzarSprayAlOeste'>
          <input type='submit' value='Lanzar Spray Al Oeste'</td>
        </form>
        <%else%>
          <form method='post' action='/AlNorte'>
            <input type='submit' disabled value='Ir al oeste'</td>
          </form>
          <form method='post' action='/LanzarAlNorte'>
            <input type='submit' disabled value='Lanzar Flecha Al Oeste'</td>
          </form>
          <form method='post' action='/LanzarSprayAlNorte'>
          <input type='submit' disabled value='Lanzar Spray Al Oeste'</td>
        </form>
        <% end %>
        </td>
        <td></td>
        <td align='center'>
        <% if $game.GetDoors()[2] && $game.IsTheSamePosMonsterAndPerson()==false && $game.IsInTheSamePosWaterWellAndPersonMove()==false && !@KillMonster; %>
          <form method='post' action='/AlEste'>
            <input type='submit' value='Ir al este'</td>
          </form>
           <form method='post' action='/LanzarAlEste'>
            <input type='submit' value='Lanzar Flecha Al Este'</td>
          </form>
          <%else%>
            <form method='post' action='/AlEste'>
              <input type='submit' disabled value='Ir al este'</td>
            </form>
            <form method='post' action='/LanzarAlEste'>
              <input type='submit' disabled value='Lanzar Flecha Al Este'</td>
            </form>
            <form method='post' action='/LanzarSprayAlEste'>
            <input type='submit' disabled value='Lanzar Spray Al Este'</td>
          </form>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td align='center'>
          <% if $game.GetDoors()[1] && $game.IsTheSamePosMonsterAndPerson()==false && $game.IsInTheSamePosWaterWellAndPersonMove()==false && !@KillMonster; %>
            
            <form method='post' action='/LanzarAlSud'>
              <input type='submit' value='Lanzar Flecha Al Sud'</td>
            </form>
            <form method='post' action='/LanzarSprayAlSud'>
            <input type='submit' value='Lanzar Spray Al Sud'</td>
          </form>
            <form method='post' action='/AlSud'>
              <input type='submit' value='Ir al sud'</td>
            </form>
          <%else%>
             <form method='post' action='/LanzarAlSud'>
              <input type='submit' disabled value='Lanzar Flecha Al Sud'</td>
            </form>
             <form method='post' action='/AlSud'>
              <input type='submit' disabled value='Ir al sud'</td>
            </form>
            <form method='post' action='/LanzarSprayAlSud'>
            <input type='submit' disabled value='Lanzar Spray Al Sud'</td>
          </form>
          <% end %>
              
        <td></td>
      </tr>
  
    </table>
  </div>
    
  </div>

  <div class="right">
    <h3>Inventario:</h3>
    <p>
        Flechas: <%=$game.QuantityArrows();%>
    </p>
    
    <p>
        Sprays: <%=$game.QuantitySprays();%>
    </p>
    <p>
    Monedas: <%=$game.GetCoins();%>
</p>
    <p>
        
    </p>
    <p>
        
    </p>
